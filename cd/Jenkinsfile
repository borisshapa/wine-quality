pipeline {
    agent any

    environment {
        DOCKERHUB_CREDS=credentials("borisshapa-dockerhub")
        LC_ALL = "en_US.UTF-8"
        LANG    = "en_US.UTF-8"
        LANGUAGE = "en_US.UTF-8"
    }

    options {
        timestamps()
        skipDefaultCheckout(true)
	}
    stages {
        stage("Login"){
            steps {
                sh "docker login -u $DOCKERHUB_CREDS_USR -p $DOCKERHUB_CREDS_PSW"
            }
        }
        stage("Pull image"){
            steps {
                sh "docker pull borisshapa/wine-quality:latest"
            }
        }

        stage("Run tests"){
            steps {
                sh "docker run --name wine-quality borisshapa/wine-quality:latest python -m scripts.run_tests"
            }
        }
	}

    post {
        always {
            sh "docker stop wine-quality && docker logout"
        }
    }
}
